  <body class="text-center">
    <form class="form-signin" action="/user/register" method="POST" enctype="multipart/form-data">
  <img class="mb4" src="/css/Logo.png" alt="" width="100" height="100">
  <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
  {{#if error}}
            <div class="error">{{error}}</div>
  {{/if}}

  <label for="inputName" class="sr-only">Username</label>
  <input type="name" id="inputName" class="form-control" placeholder="Username" name="username" required autofocus>

  <label for="inputName" class="sr-only">Complete Name</label>
  <input type="name" id="inputName" class="form-control" placeholder="Complete Name" name="cn" required autofocus>


  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="email" required autofocus>

  <label for="inputContact" class="sr-only">Contact Number</label>
  <input type="tel" id="inputContact" class="form-control" placeholder="Contact Number" name="contactNum" required autofocus>

  <label for="inputBusinessName" class="sr-only">Business Name</label>
  <input type="businessName" id="inputBusinessName" class="form-control" placeholder="Business Name"  name="businessName" autofocus>
  
  <div class="float-left" style="color:gray; padding-left: 10px;">Business Logo</div>
  <label for="inputLogo" class="sr-only">Business Logo</label>
  <input type="file" id="inputLogo" class="form-control" placeholder="Business Logo" name="businessLogo" autofocus>
  
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="password" required>

   <button class="btn btn-lg btn-primary btn-block" type="submit" value="Register">Sign Up</button> 
  {{!-- <input type="submit" value="Register"> --}}
